  ; Modules
  modules-right = battery date

; Battery module
[module/battery]
  type = internal/battery 
  battery = BAT0
  adapter = AC
  label-discharging =  %percentage%%
  label-charging =  %percentage%%

; Date module
[module/date]
  type = internal/date
  interval = 60.0
  date = "%Y-%m-%d"
  time = "%H:%M"
  label = %date% %time%

